
{

  "ts-node":{
    "module":"commonjs",
        "target":"es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "esm":true,
        "skipLibCheck": true
},
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "strictPropertyInitialization":false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "puppeteer", "node","vue"],
    "rootDir": ".",
    "paths": {
      "@lowcode/*": ["packages/*/src/"],
    }
  },
  "include": [
    "packages/*/src",
  ]
}
